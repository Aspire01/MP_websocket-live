/* 新列表样式 */

.product-wrapper {
  margin: 15rpx 24rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.product-wrapper .product-item-wrap {
  width: 48%;
  background-color: #fff;
  margin-bottom: 18rpx;
  box-shadow: 0 1px 2px #ccc;
  border-radius: 10rpx;
}

.product-wrapper .product-item-wrap .pro-img-wrap {
  width: 100%;
  height: 336rpx;
}

.product-wrapper .product-item-wrap .pro-img-wrap > image {
  border-radius: 6rpx 6rpx 0 0;
}

.product-wrapper .product-item-wrap .pro-detail-wrap {
  padding: 17rpx 21rpx;
}

.product-wrapper .product-item-wrap .pro-detail-wrap .desc {
  font-size: 23rpx;
}

.product-wrapper .product-item-wrap .pro-detail-wrap .style {
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 18rpx 0;
}

.product-wrapper .product-item-wrap .pro-detail-wrap .style  .style-item {
  padding: 0 20rpx;
  height: 30rpx;
  border-radius: 15rpx;
  background-color: #f7f7f7;
  line-height: 30rpx;
  font-size: 20rpx;
}

.isDeliver {
  border-radius: 5rpx;
  box-sizing: border-box;
  border: 1px solid #ff605a;
  color: #ff605a;
  font-size: 22rpx;
  padding: 0 4rpx;
  left: 0;
  top: 0;
  position: absolute;
}

.trade {
  font-size: 20rpx;
  color: #999;
}

.price-num {
  color: #ff605a;
  font-size: 32rpx;
}

.search-wrap .head-wrap {
  flex: 1;
}

.search-box {
  flex: 1;
  height: 66rpx;
  background: #fff;
  border-radius: 33rpx;
  align-items: center;
  padding: 0 20rpx;
  margin-right: 30rpx;
}

.search-box > input {
  height: 66rpx;
  outline: 0;
  border: 0;
  font-size: 28rpx;
  color: #333;
  flex: 1;
}

.placeholder {
  color: #ccc;
}

.icon-search {
  margin-right: 15rpx;
  color: #ccc;
}

.search-wrap {
  display: flex;
  padding: 18rpx 34rpx;
  justify-content: space-between;
  align-items: center;
  background: linear-gradient(90deg, rgba(255, 103, 96, 1), rgba(255, 147, 118, 1));
}

.search-text {
  color: #fff;
  font-size: 34rpx;
}
