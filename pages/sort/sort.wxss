.page {
  width: 100%;
  height: 100%;
  background: #f3f3f3;
  font-size: 28rpx;
  color: #333;
  display: flex;
  flex-flow: column;
  box-sizing: border-box;
}

.page, page {
  width: 100%;
  height: 100%;
}

.nav-bar {
  display: flex;
  width: 100%;
  background: #fff;
  height: 80rpx;
  box-sizing: border-box;
}

.nav-bar .bar-item {
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  box-sizing: border-box;
  width: calc(100%/5);
  display: inline-block;
}

.nav-bar .active {
  border-bottom: 1px solid #f8b303;
  /* color: #F8B303; */
}

.wraper {
  flex: 1;
  overflow: hidden;
  display: flex;
}

.left-bar {
  background: #f3f3f3;
  flex: 0 0 152rpx;
  height: 100%;
  border-right: 1px solid #e8e8e8;
  border-top: 1px solid #e8e8e8;
  overflow-y: scroll;
}

.choose-list {
  padding: 0 15rpx;
  box-sizing: border-box;
  padding-bottom: 40rpx;
}

.choose-list .list {
  text-align: center;
  height: 53rpx;
  line-height: 53rpx;
  width: 100%;
  border-radius: 27rpx;
  margin-top: 40rpx;
  font-size: 24rpx;
}

.choose-list .list.active {
  background: #f8b303;
  color: #fff;
}

/* 隐藏滚动条 */

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.right-content {
  flex-grow: 1;
  padding: 18rpx 23rpx;
  border-top: 1px solid #e8e8e8;
  background: #fff;
}

.right-content .right-item {
  width: 48%;
  border-radius: 4rpx;
  float: left;
  margin-left: 2%;
  margin-bottom: 18rpx;
}

.right-content .right-item .item-img {
  background: #fff;
  border-radius: 8rpx 8rpx 0 0;
}

.right-content .right-item .item-img, .right-content .right-item .item-img image {
  width: 100%;
  height: 180rpx;
}

.right-content .right-item .desc {
  background: #fff;
  padding: 15rpx;
  border-radius: 0 0 8rpx 8rpx;
}

.right-content .right-item .desc .txt {
  font-size: 26rpx;
}

.right-content .right-item .desc .price {
  font-size: 30rpx;
  color: #f8b303;
  margin: 10rpx 0;
  font-weight: bold;
}

.els {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.els-2 {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.content-wrap {
  flex-wrap: wrap;
  justify-content: flex-start;
}

.content-wrap .item-wrap {
  width: calc(100%/3);
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.content-wrap .item-wrap  image {
  width: 120rpx;
  height: 120rpx;
  /* border-radius: 50%; */
  display: block;
  margin: 0 auto;
}

.content-scroll-view {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  background: #fff;
}

.content-scroll-view .item-wrap {
  display: inline-block;
}

@import '../sort-column/index.wxss';
