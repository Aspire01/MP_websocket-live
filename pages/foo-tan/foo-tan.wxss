/* pages/foo-tan/foo-tan.wxss */

.close {
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
}

.choose-wrap {
  font-size: 30rpx;
  height: 80rpx;
  position: absolute;
  top: 0;
  left: 24rpx;
  right: 24rpx;
}

.choose-wrap > image {
  position: absolute;
  right: 0rpx;
  top: 50%;
  transform: translateY(-50%);
}

.model-proinfo {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  background-color: #fff;
  padding: 0 30rpx;
  box-sizing: border-box;
  transform: translate3d(0, 120%, 0);
  transition: all 0.3s cubic-bezier(0.25, 0.5, 0.5, 0.9);
  z-index: 999;
  max-height: 1000rpx;
  overflow: scroll;
}

.model-proinfo .hd-wrapper {
  align-items: center;
}

.model-proinfo .hd-wrapper image {
  width: 180rpx;
  height: 180rpx;
  box-sizing: border-box;
  border-radius: 5px;
}

.model-proinfo .hd-wrapper .txt-info {
  width: 445rpx;
  height: 180rpx;
  padding: 15rpx 24rpx 0;
  box-sizing: border-box;
  flex-direction: column;
}

.model-proinfo .hd-wrapper .txt-info .num {
  margin-top: 25rpx;
  justify-content: space-between;
  align-items: flex-end;
}

.model-proinfo .hd-wrapper .txt-info .title {
}

.model-proinfo .hd-wrapper .txt-info .num .price {
  font-size: 32rpx;
  color: #ff605a;
}

.model-proinfo .hd-wrapper .txt-info .num .stock {
  margin-top: 20rpx;
  font-size: 24rpx;
  color: #666;
}

.model-proinfo .bd-wrapper .parameter-item {
  padding: 30rpx 0;
  border-bottom: 1px solid #eaeaea;
}

.model-proinfo .bd-wrapper .item-wrapper {
  display: flex;
  flex-wrap: wrap;
}

.model-proinfo .bd-wrapper .item-wrapper .item {
  height: 58rpx;
  text-align: center;
  line-height: 58rpx;
  background-color: #eee;
  font-size: 24rpx;
  border-radius: 3px;
  margin: 28rpx 35rpx 0 0;
  padding: 0rpx 20rpx;
}

.model-proinfo.show {
  transform: translate3d(0, 0, 0);
}

.count-wrappers {
  position: absolute;
  right: 20rpx;
  top: 50%;
  width: 160rpx;
  height: 47rpx;
  box-sizing: border-box;
  border: 1px solid #ddd;
  border-radius: 3px;
  align-items: center;
  margin-top: -23.5rpx;
  line-height: 47rpx;
}

.count-wrappers text {
  flex: 1;
  text-align: center;
  height: 100%;
  font-size: 36rpx;
  color: #454545;
  line-height: 37rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.count-wrappers .num {
  flex: initial;
  text-align: center;
  width: 66rpx;
  color: #333;
  font-size: 28rpx;
  border-left: 1px solid #ddd;
  border-right: 1px solid #ddd;
  line-height: 47rpx;
}

.count-wrappers .disabled {
  color: #ccc;
}

.count-box {
  position: relative;
  height: 106rpx;
  line-height: 106rpx;
  margin-bottom: 20rpx;
  border-top: 1px solid #ccc;
  background: #fff;
}

.foot-wrapper {
  position: relative;
  height: 70rpx;
  width: 90%;
  border-radius: 35rpx;
  line-height: 70rpx;
  text-align: center;
  color: #fff;
  font-size: 30rpx;
  margin: 30rpx auto;
  background: linear-gradient(90deg, rgba(255, 103, 96, 1), rgba(255, 147, 118, 1));
}

.model-proinfo.show {
  transform: translate3d(0, 0, 0);
}

.sizecolor {
  background-color: #ff3d3d !important;
  color: #fff !important;
}

.md-wrapper {
  padding: 20rpx 0;
}

.md-wrapper .color-attr-wrap {
  justify-content: flex-start;
  align-items: center;
  flex-wrap: wrap;
  margin-top: 20rpx;
}

.md-wrapper .color-attr-wrap > text {
  padding: 10rpx 20rpx;
  font-size: 26rpx;
  margin: 0 15rpx 15rpx 0;
  background-color: #eee;
  border-radius: 10rpx;
}

.md-wrapper .color-attr-wrap .active {
  color: #ff605a;
  box-sizing: border-box;
  border: 1px solid #ff605a;
  background: #fff;
}

.scroll-area {
  max-height: 500rpx;
  overflow-y: scroll;
}
