/* packageA/pages/stylist-details/stylist-details.wxss */
page{
  background: #fff;
}

.avatar{
  width:100%;
  height:140rpx;
  padding:20rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items:center;
}

.avatar .caption{
  font-size: 32rpx;
  color:#333;
}
.avatar .info {
  display: flex;
  align-items:center;
}

.avatar .info .avatar-img{
  width:100rpx;
  height:100rpx;
  border-radius: 100%;
  margin-right:10rpx;
}
.avatar .info .iconfont{
  font-size: 38rpx;
  color:#ccc;
}

.item{
  width:100%;
  height:100rpx;
  padding:20rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items:center;
}
.item .caption{
  font-size: 32rpx;
  color:#333;
}
.item .info {
  display: flex;
  align-items:center;
}

.item .info .placeholder{
  width:350rpx;
  box-sizing: border-box;
  text-align: right;
  padding:0 15rpx;
}
.item .info .iconfont{
  font-size: 38rpx;
  color:#ccc;
}

.add-picture{
  position:relative;
  width:100rpx;
  height:100rpx;
  border:1px solid #ddd;
  margin:0 auto;
  display: flex;
  justify-content: center;
  align-items: center;
}
.add-picture .horizontal{
  position: absolute;
  top:50%;
  left:50%;
  transform: translateX(-45%);
  width:30rpx;
  height: 3rpx;
  background: #ddd;
}
.add-picture .vertical{
  position: absolute;
  top:50%;
  left:50%;
  transform: translateY(-45%);
  width:3rpx;
  height: 30rpx;
  background: #ddd;
}

.save{
  width:180rpx;
  height: 65rpx;
  background: #f9b303;
  color:#333;
  font-size: 28rpx;
  text-align: center;
  line-height:65rpx;
  margin: 60rpx auto;
  border-radius:5rpx;
}