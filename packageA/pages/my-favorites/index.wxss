page {
  background: #fff;
}

.diff-bg {
  background: #454648!important;
}

.tabs-wrapper {
  height: 100rpx;
  display: flex;
  padding: 0 190rpx;
  justify-content: space-between;
  align-items: center;
  font-size: 26rpx;
}

.active {
  color: #F8B303;
}


.hasMore {
  text-align: center;
  padding: 10rpx;
  color: #ccc;
  font-size: 28rpx;
}

/* 新列表样式 */
.product-wrapper, .article-wrapper {
  margin: 32rpx 24rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.product-wrapper .product-item-wrap {
  width: 48%;
  background-color: #fff;
  margin-bottom: 18rpx;
  box-shadow: 0 1px 2px #ccc;
  border-radius: 10rpx;
}

.product-wrapper .product-item-wrap .pro-img-wrap {
  width: 100%;
  height: 221rpx;
}

.product-wrapper .product-item-wrap .pro-img-wrap > image {
  border-radius: 6rpx 6rpx 0 0;
}

.product-wrapper .product-item-wrap .pro-detail-wrap {
  padding: 17rpx 21rpx;
}

.product-wrapper .product-item-wrap .pro-detail-wrap .desc {
  font-size: 23rpx;
}

.product-wrapper .product-item-wrap .pro-detail-wrap .style {
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 18rpx  0;
}


.product-wrapper .product-item-wrap .pro-detail-wrap .style  .style-item {
  padding: 0 20rpx;
  height: 30rpx;
  border-radius: 15rpx;
  background-color: #F7F7F7;
  line-height: 30rpx;
  font-size: 20rpx;
}

.isDeliver {
  border-radius: 5rpx;
  box-sizing: border-box;
  border: 1px solid #E2631C;
  color: #E2631C;
  font-size: 22rpx;
  padding: 0 4rpx;
  left: 0;
  top: 0;
  position: absolute;
}

.trade {
  font-size: 20rpx;
  color: #999;
}

.price-num {
  color: #E2631C;
  font-size: 32rpx;
}

.article-wrapper .item {
  display: flex;
  padding: 24rpx 28rpx 23rpx;
  border-bottom: 0.5px solid #ededed;
  margin-bottom: 30rpx;
}

.article-wrapper .item .img-wrap {
  flex: 0 0 185rpx;
  height: 185rpx;
  position: relative;
  margin-right: 30rpx;
  border-radius: 10rpx;
}

.article-wrapper .item .img-wrap > .img-circle {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}

.article-wrapper .item .img-wrap .rank {
  width: 40rpx;
  height: 50rpx;
  position: absolute;
  top: 0;
  left: 10rpx;
}

.article-wrapper .item .detail {
  padding: 12rpx 0;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.date {
  font-size: 24rpx;
  color: #bbb;
}

.article-wrapper .item .detail .name {
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  font-size: 30rpx;
}

.article-wrapper .item .detail .desc {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  font-size: 24rpx;
  color: #707070;
}

.card {
  width: 100%;
  height: 180rpx;
  padding: 30rpx 50rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.card .person {
  width: 450rpx;
  height: 120rpx;
  display: flex;
  align-items: center;
  box-sizing: border-box;
}

.card .person image {
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.card .person .desc {
  width: 310rpx;
  display: flex;
  flex-direction: column;
}

.card .person .desc .title {
  display: flex;
  align-items: baseline;
  margin-bottom: 10rpx;
  font-size: 32rpx;
  color: #333;
  font-weight: 600;
}

.card .person .desc .info {
  font-size: 24rpx;
  color: #B5B4B4;
  margin-bottom: 5rpx;
}

.card .person .desc .address {
  width:100%;
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color:#909090;
  margin-left: 3rpx;
}

.card .person .desc .address .localtion{
  width:200rpx;
}

.card .attention {
  width: 140rpx;
  height: 65rpx;
  box-sizing: border-box;
  border-radius: 12rpx;
  text-align: center;
  line-height: 65rpx;
  font-size: 28rpx;
  background: #ddd;
  color: #fff;
  letter-spacing: 3rpx;
}
