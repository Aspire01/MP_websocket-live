page {
  background: #f7f7f7;
}

.rich-wrapper {
  background: #fff;
  width: 100%;
  font-size: 28rpx;
  position: relative;
}

.sign-box {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  color: #fff;
  text-align: center;
  font-size: 50rpx;
  margin-top: 36rpx;
}

.main-wrapper {
  position: absolute;
  width: 90%;
  background-color: #fff;
  left: 50%;
  top: 176rpx;
  transform: translate(-50%);
  border-radius: 10rpx;
}

.inner-main-wrapper {
  padding: 30rpx 24rpx;
}

.warn-box {
  font-size: 32rpx;
  color: #f9af4a;
  margin-bottom: 30rpx;
}

.warn-content {
  margin-bottom: 30rpx;
  color: #6b6b6b;
  font-size: 28rpx;
}

.handWriting {
  background: #fff;
  width: 100%;
  /* height: 95vh; */
}

.handRight {
  display: inline-flex;
  align-items: center;
}

.handCenter {
  border: 4rpx dashed #e9e9e9;
  flex: 5;
  overflow: hidden;
  box-sizing: border-box;
}

.handTitle {
  transform: rotate(90deg);
  flex: 1;
  color: #666;
}

.btn-wrapper {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  margin-top: 20rpx;
}

.delBtn {
  position: relative;
  color: #fff;
  margin: 0;
  padding: 10rpx 15rpx;
  border: 1px solid #ffac32;
  background-color: #fdc568;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
}

.confirm-box {
  position: absolute;
  bottom: 20rpx;
  height: 60rpx;
  line-height: 60rpx;
  width: 60%;
  margin-left: 50%;
  text-align: center;
  transform: translate(-50%);
  background-image: -webkit-gradient(linear, 79% 0%, 0% 100%, from(#fcc360), to(#ffa82b));
  color: #fff;
  border-radius: 10rpx;
  margin-top: 30rpx;
  margin-bottom: 100rpx;
  font-size: 30rpx;
  letter-spacing: 6px;
}

.canvas-wrapper {
  width: 100%;
  padding: 20rpx 40rpx;
  box-sizing: border-box;
  background: #f7f7f7;
}

.canvas-wrapper .canvas {
  width: 100%;
  height: 283rpx;
  border: 1px solid #eee;
  margin-bottom: 20rpx;
  background: #fff;
  box-shadow: 1px 1px 1px #eee;
}

.canvas-wrapper button {
  margin-bottom: 30rpx;
}

.wxParse {
  font-size: 30rpx;
}

.sign-wrap {
  font-size: 28rpx;
  width: 100%;
  background: #fff;
  margin-top: 20rpx;
}

.sign-wrap .tip {
  background: #e5e5e5;
  padding-bottom: 100rpx;
}

.sign-wrap .txt {
  text-align: center;
  line-height: 35rpx;
  font-size: 35rpx;
  padding: 35rpx 0;
}

.sign-wrap .tip .sign-btn {
  width: 35%;
  height: 60rpx;
  line-height: 60rpx;
  background: #fcc360;
  color: #fff;
  text-align: center;
  border-radius: 60rpx;
  margin: 72rpx auto;
}

.btn {
  overflow: hidden;
  width: 80%;
  margin: 0 auto;
  color: #fff;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.btn view {
  height: 60rpx;
  line-height: 60rpx;
  background: #f8b303;
  text-align: center;
  width: 30%;
  border-radius: 60rpx;
}

.btn .redraw {
}

.btn .create {
  background: #454648;
}

.content {
  padding: 0 20rpx;
  box-sizing: border-box;
  font-size: 30rpx;
}

.contract-canvas {
  position: absolute;
  top: 0rpx;
  right: 0rpx;
  width: 100%;
  background: transparent;
}
