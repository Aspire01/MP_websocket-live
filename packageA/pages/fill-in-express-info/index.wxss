page {
  background: #F3F3F3;
}

.express-wrapper {
  position: relative;
}

.express-wrapper .express-title {
  padding: 20rpx 24rpx 4rpx;
  font-size: 28rpx;
}

.content-item {
  display: flex;
  padding: 20rpx 25rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #eee;
  background: #fff;
}

.content-item .img-wrap {
  flex: 0 0 162rpx;
  width: 162rpx;
  height: 162rpx;
  position: relative;
  border-radius: 10rpx;
}

.content-item .img-wrap .img {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}

.content-item .img-wrap .rank {
  width: 40rpx;
  height: 50rpx;
  position: absolute;
  top: 0;
  left: 10rpx;
}

.content-item .detail {
  padding: 20rpx 0 20rpx 20rpx;
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  position: relative;
  min-width: 0;
}

.red-like {
  color: #222B34;
  font-weight: 500;
}

.content-item .detail .name {
  width: auto;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  font-size: 30rpx;
}

.content-item .detail .desc {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  font-size: 24rpx;
  color: #707070;
  line-height: 1.75;
}

.express-wrapper .bot {
  margin-top:10rpx;
  background: #fff;
  padding: 20rpx 24rpx;
}

.express-wrapper .bot .reason-item {
  height: 80rpx;
  line-height: 80rpx;
  box-sizing: border-box;
  background:#F3F3F3;
  width: 100%;
  font-size: 28rpx;
  padding: 0 20rpx;
  text-align: center;
  margin-bottom: 16rpx;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.express-wrapper .bot .reason-item .item-left-txt {
  position: absolute;
  left: 0;
  top: 0;
  color: #666;
  margin-left: 20rpx;
}

.express-wrapper .bot .reason-item .item-right-icon {
  position: absolute;
  right: 0;
  top: 0;
  color: #666;
  margin-right: 20rpx;
}

.express-btn {
  bottom: 500rpx;
}


.padding-xl {
  padding: 0!important;
  background: #fff!important;
  max-height: 600rpx;
}

.modal-reason-item {
  position: relative;
  font-size: 28rpx;
  padding: 30rpx 24rpx 28rpx;
  border-bottom: 1px solid #eee;
}

.modal-reason-item  .icon-non-selected,.modal-reason-item .icon-selected {
  position: absolute;
  right: 0;
  margin-right: 24rpx;
}

.modal-reason-item .icon-selected {
  color: #f8b303;
}

.express-selected {
  background: #f8b303;
  color: #fff;
}
