page {
  background: #F4F4F4;
}

.return-wrapper {
  margin: 10rpx 24rpx;
}

.return-goods-list .item {
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 10rpx;
  overflow: hidden;
}

.return-goods-list .item .item-order-num {
  padding: 24rpx 20rpx;
  border-bottom: 1px solid #eee;
}

.return-goods-list .item .item-order-num .order-num-txt {
  font-size: 26rpx;
  color: #666;
}

.return-goods-list .item .item-status {
  padding: 18rpx;
  font-size: 24rpx;
  border-bottom: 1px solid #eee;
}

.return-goods-list .item .item-status .right-txt {
  margin-left: 15rpx;
  color: #E2631C;
}

.return-goods-list .item .item-detail-btn {
  margin: 20rpx 0;
  width: 120rpx;
  height: 42rpx;
  line-height: 42rpx;
  border-radius: 21rpx;
  color: #fff;
  text-align: center;
  background: #F8B303;
  font-size: 24rpx;
  float: right;
  margin-right: 20rpx;
}

.combo {
  height: 30rpx;
  font-size: 20rpx;
  color: #fff;
  border-radius: 15rpx;
  padding: 10rpx;
  background: #F8B303;
  border-bottom: 1px solid #eee;
}

.content-wrap {
  min-height: 600rpx;
}

.content-item {
  display: flex;
  padding: 20rpx 25rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #eee;
}

.content-item .img-wrap {
  flex: 0 0 162rpx;
  width: 162rpx;
  height: 162rpx;
  position: relative;
  border-radius: 10rpx;
}

.content-item .img-wrap .img {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}

.content-item .img-wrap .rank {
  width: 40rpx;
  height: 50rpx;
  position: absolute;
  top: 0;
  left: 10rpx;
}

.content-item .detail {
  padding: 20rpx 0 20rpx 20rpx;
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  position: relative;
  min-width: 0;
}

.red-like {
  color: #222B34;
  font-weight: 500;
}

.content-item .detail .name {
  width: auto;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  font-size: 30rpx;
}

.content-item .detail .desc {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  font-size: 24rpx;
  color: #707070;
  line-height: 1.75;
}



.btn {
  height: 42rpx;
  border-radius: 21rpx;
  padding: 8rpx 20rpx;
  color: #fff;
  box-sizing: border-box;
  border: 1px solid #F8B303;
  margin-left: 20rpx;
  font-size: 28rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}


.hasMore {
  text-align: center;
  padding: 10rpx;
  color: #ccc;
  font-size: 28rpx;
}


.icon-delete {
  color: #ADADAD;
}

